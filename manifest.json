{
  "manifest_version": 2,

  "name": "Storage viewer",
  "description": "This extension displays desired local/session storage values in the browser window",
  "version": "1.0",
  "author": "Andrei Diaconu",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "options_page": "options.html",
  "options_ui": {
    "chrome_style": true,
    "page": "options.html"
  },
  "content_scripts": [
   {
   "all_frames": false,
   "matches": ["<all_urls>"],
   "exclude_matches": [],
     "js": [
       "js/jquery.min.js"
     ]
   }
 ],
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "storage"
  ]

}
